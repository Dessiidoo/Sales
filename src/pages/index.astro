---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import DomainScanner from '../components/DomainScanner.astro';
import Analytics from '../components/Analytics.astro';
---

<Layout title="DomainFlip AI - Find Profitable Domain Investments">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-600 via-purple-600 to-primary-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Find <span class="text-yellow-300">Million Dollar</span> Domains for Pennies
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-blue-100">
            AI-powered domain analysis finds undervalued domains with 1000%+ profit potential. 
            Buy for $1, sell for $1,000+
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <div class="flex items-center space-x-2 text-green-300">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>87% Prediction Accuracy</span>
            </div>
            <div class="flex items-center space-x-2 text-green-300">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>$2.4M+ Profits Identified</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <DomainScanner />
    <Analytics />

    <!-- CTA Section -->
    <section class="bg-gray-900 text-white py-16">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold mb-4">Ready to Start Domain Flipping?</h2>
        <p class="text-xl text-gray-300 mb-8">
          Join thousands of investors who are making serious money with AI-powered domain analysis.
        </p>
        <button class="btn-primary text-lg px-8 py-4">
          Start Scanning Domains
        </button>
      </div>
    </section>
  </main>

  <footer class="bg-gray-50 border-t border-gray-200 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-gray-600">
          Â© 2025 DomainFlip AI. Powered by advanced machine learning algorithms.
        </p>
        <p class="text-sm text-gray-500 mt-2">
          Disclaimer: Domain investments carry risk. Past performance doesn't guarantee future results.
        </p>
      </div>
    </div>
  </footer>

<script>
  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // CTA button scroll to scanner
  document.querySelector('footer button')?.addEventListener('click', () => {
    document.querySelector('#scanner')?.scrollIntoView({
      behavior: 'smooth',
      block: 'start'
    });
  });
</script></Layout>